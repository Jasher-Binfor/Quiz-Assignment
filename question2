// Version 1
public static double calculateClassAverage(double numOne, double numTwo) {
    double resultAvg;
    resultAvg = (numOne + numTwo) / 2;
    return resultAvg;
}
// Version 2
public static double calculateClassAverage(double markA, double markB, double markC) {
    double finalAvg;
    finalAvg = (markA + markB + markC) / 3;
    return finalAvg;
}
// Version 3
public static double calculateClassAverage(double[] scoreBox) {
    double totalScore = 0;
    double avgValue;
    int counter = 0;
    for (int i = 0; i < scoreBox.length; i++) {
        totalScore = totalScore + scoreBox[i];
        counter = counter + 1;
    }
    avgValue = totalScore / counter;
    return avgValue;
}
